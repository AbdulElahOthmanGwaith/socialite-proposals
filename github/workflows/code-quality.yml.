name: Code Quality Check

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  analysis:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.3'
          extensions: mbstring, xml, ctype, iconv, json

      - name: Check for Syntax Errors
        run: |
          # فحص ملفات الماركدوان للتأكد من عدم وجود أخطاء هيكلية في نماذج الكود
          find . -name "*.md" -exec grep -l '<?php' {} + | xargs -I {} php -l {} || true
          echo "Syntax check completed for documentation files."
